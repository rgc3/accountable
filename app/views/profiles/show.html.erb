<h1>User Profiles</h1>

<%= @user.first_name %> <%= @user.last_name %><br />
<%= @user.username %><br />

<%= @user.goals.count %> <span class="small text">Goals</span><br />
<%= @user.bio %>
<%= @user.location %>
Joined in <%= @user.created_at.strftime("%B %Y") %>

<!-- Following and Unfollowing users -->

<% if current_user.id != @user.id %>
  <% if current_user.friends.include?(@user) %>
    <%= link_to "Following", relationship_path(current_user.relationships.find_by_friend_id(@user)), :method => :delete, class: "btn btn-primary", id:"unfollow_btn" %>
  <% else %>
    <%= link_to "Follow", relationships_path(:friend_id => @user), method: :post, class: "btn btn_success" %>
  <% end %>
<% end %>

<br /><br />

<!-- User goals -->

<% @user.goals.each do |goal| %>
<strong>Goal: <%= goal.name %></strong><br />
<%= goal.description %><br />
<hr />
<% end %>
